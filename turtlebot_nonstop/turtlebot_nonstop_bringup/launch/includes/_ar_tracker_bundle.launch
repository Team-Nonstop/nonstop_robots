<launch>
  <arg name="marker_size" default="9" />
  <arg name="max_new_marker_error" default="0.08" />
  <arg name="max_track_error" default="0.2" />
  <arg name="max_frequency" default="5.0" />
  <arg name ="med_filt_size" default="10" />

  <arg name="cam_image_topic" default="camera/depth_registered/points" />
  <arg name="cam_info_topic" default="camera/rgb/camera_info" />    
  <arg name="output_frame" default="camera_rgb_optical_frame" />

  <arg name="bundle_files" default="$(find nonstop_markers)/bundles/MarkerBundle_0.xml" />
  <node name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundles" respawn="false" output="screen"
        args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame) $(arg med_filt_size) $(arg bundle_files)">
    <param name="max_frequency" value="$(arg max_frequency)"/>  <!-- Must be be set as a parameter so other nodes can read it (e.g. ar_markers) -->

    <remap from="ARmarker_points"       to="ar_track_alvar/ARmarker_points"/>
    <remap from="ar_pose_marker"        to="ar_track_alvar/ar_pose_marker"/>
    <remap from="visualization_marker"  to="ar_track_alvar/visualization_marker"/>
  </node>
</launch>
