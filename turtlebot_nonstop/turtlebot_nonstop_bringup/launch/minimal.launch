<launch>
  <arg name="base"       default="$(optenv TURTLEBOT_BASE kobuki)"/>  <!-- create, rhoomba -->
  <arg name="battery"    default="$(optenv TURTLEBOT_BATTERY /sys/class/power_supply/BAT0)"/>  <!-- /proc/acpi/battery/BAT0 -->
  <arg name="stacks"     default="$(optenv TURTLEBOT_STACKS hexagons)"/>  <!-- circles, hexagons -->
  <arg name="3d_sensor"  default="$(optenv TURTLEBOT_3D_SENSOR kinect)"/>  <!-- kinect, asus_xtion_pro -->
  <arg name="safety_controller" default="$(optenv TURTLEBOT_SAFETY_CONTROLLER false)" />
  <arg name="simulation" default="$(optenv TURTLEBOT_SIMULATION false)"/>
  <arg name="attached_marker" default="$(optenv TURTLEBOT_MARKER_BUNDLE 0)"/>

  <param name="/use_sim_time" value="$(arg simulation)"/>
  
  <include file="$(find turtlebot_nonstop_bringup)/launch/includes/_robot_with_marker.launch">
    <arg name="base" value="$(arg base)" />
    <arg name="stacks" value="$(arg stacks)" />
    <arg name="3d_sensor" value="$(arg 3d_sensor)" />
    <arg name="attached_marker" value="$(arg attached_marker)" />
  </include>
  <include file="$(find turtlebot_nonstop_bringup)/launch/includes/_mobile_base.launch">
    <arg name="base" value="$(arg base)" />
    <arg name="safety_controller" value="$(arg safety_controller)" />
  </include>
  <include file="$(find turtlebot_nonstop_bringup)/launch/includes/_netbook.launch">
    <arg name="battery" value="$(arg battery)" />
  </include>
  
</launch>
